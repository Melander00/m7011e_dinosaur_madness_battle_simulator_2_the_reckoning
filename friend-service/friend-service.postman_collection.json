{
  "info": {
    "name": "Friend Service API",
    "description": "Complete REST API collection for testing the friend-service microservice",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/healthz",
          "host": ["{{baseUrl}}"],
          "path": ["healthz"]
        }
      }
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"player1\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users",
              "host": ["{{baseUrl}}"],
              "path": ["users"]
            }
          }
        },
        {
          "name": "List All Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users",
              "host": ["{{baseUrl}}"],
              "path": ["users"]
            }
          }
        },
        {
          "name": "Search Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users?search=player&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["users"],
              "query": [
                {"key": "search", "value": "player"},
                {"key": "limit", "value": "20"}
              ]
            }
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/1",
              "host": ["{{baseUrl}}"],
              "path": ["users", "1"]
            }
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"updated_name\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/1",
              "host": ["{{baseUrl}}"],
              "path": ["users", "1"]
            }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/1",
              "host": ["{{baseUrl}}"],
              "path": ["users", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Friend Requests",
      "item": [
        {
          "name": "Send Friend Request",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fromUserID\": 1,\n  \"toUserID\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/requests",
              "host": ["{{baseUrl}}"],
              "path": ["requests"]
            }
          }
        },
        {
          "name": "Get Incoming Requests",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/requests/incoming/2",
              "host": ["{{baseUrl}}"],
              "path": ["requests", "incoming", "2"]
            }
          }
        },
        {
          "name": "Get Outgoing Requests",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/requests/outgoing/1",
              "host": ["{{baseUrl}}"],
              "path": ["requests", "outgoing", "1"]
            }
          }
        },
        {
          "name": "Accept Friend Request",
          "request": {
            "method": "PUT",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/requests/1/accept",
              "host": ["{{baseUrl}}"],
              "path": ["requests", "1", "accept"]
            }
          }
        },
        {
          "name": "Reject Friend Request",
          "request": {
            "method": "PUT",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/requests/1/reject",
              "host": ["{{baseUrl}}"],
              "path": ["requests", "1", "reject"]
            }
          }
        },
        {
          "name": "Cancel Friend Request",
          "request": {
            "method": "DELETE",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fromUserID\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/requests/1",
              "host": ["{{baseUrl}}"],
              "path": ["requests", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Friendships",
      "item": [
        {
          "name": "Get User's Friends",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/friendships/1",
              "host": ["{{baseUrl}}"],
              "path": ["friendships", "1"]
            }
          }
        },
        {
          "name": "Get Friend Count",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/friendships/1/count",
              "host": ["{{baseUrl}}"],
              "path": ["friendships", "1", "count"]
            }
          }
        },
        {
          "name": "Create Friendship (Direct)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userID1\": 1,\n  \"userID2\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/friendships",
              "host": ["{{baseUrl}}"],
              "path": ["friendships"]
            }
          }
        },
        {
          "name": "Delete Friendship",
          "request": {
            "method": "DELETE",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userID1\": 1,\n  \"userID2\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/friendships",
              "host": ["{{baseUrl}}"],
              "path": ["friendships"]
            }
          }
        }
      ]
    }
  ]
}
