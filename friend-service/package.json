{
  "name": "friend-service",
  "version": "1.0.0",
  "description": "Microservice for managing user friendships and friend requests",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "watch": "tsc --watch",
    "test": "jest --config jest.config.js",
    "test:unit": "jest --config jest.config.js --coverage",
    "test:integration": "jest --config jest.config.integration.js",
    "test:integration:coverage": "jest --config jest.config.integration.js --coverage",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage --coverageReporters=text --coverageReporters=lcov"
  },
  "keywords": [
    "friends",
    "microservice",
    "rest-api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.3",
    "jwks-rsa": "^3.2.0",
    "morgan": "^1.10.0",
    "pg": "^8.12.0",
    "rabbitmq-client": "^5.0.8",
    "redis": "^4.6.13"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.11.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.1.4",
    "testcontainers": "^11.11.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
