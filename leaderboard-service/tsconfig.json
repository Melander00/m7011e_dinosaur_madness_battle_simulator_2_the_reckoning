{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",

    "rootDir": "../",
    "outDir": "dist",

    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

  },
  "include": [
    "src/**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "coverage",
  ]
}