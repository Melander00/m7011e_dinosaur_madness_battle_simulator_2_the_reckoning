{
  "name": "user-service",
  "version": "1.0.0",
  "description": "User management service routes",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "build": "npx tsc -p tsconfig.prod.json",
    "start": "node dist/main.js",
    "dev": "nodemon --exec ts-node src/main.ts",
    "watch": "tsc --watch",
    "test": "npm run test:unit",
    "test:unit": "jest -c jest.config.js",
    "test:integration": "jest -c jest.config.integration.js --runInBand",
    "test:all": "npm run test:unit && npm run test:integration"
  },
  "dependencies": {
    "amqplib": "^0.10.9",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "jsonwebtoken": "^9.0.3",
    "jwks-rsa": "^3.2.0",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.6.0",
    "@types/amqplib": "^0.10.8",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.27",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.1.4",
    "testcontainers": "^11.6.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
